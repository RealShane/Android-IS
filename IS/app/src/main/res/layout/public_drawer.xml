<?xml version="1.0" encoding="utf-8"?>
<!--抽屉-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_gravity="left"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:src="@drawable/ic_order"
            android:onClick="Second_Class"
            android:id="@+id/drawerSecondClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Second_Class"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="@string/second_class"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:src="@drawable/ic_calculator"
            android:onClick="Undone"
            android:id="@+id/drawerOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Undone"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="@string/origin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:src="@drawable/ic_email"
            android:onClick="Undone"
            android:id="@+id/drawerPostOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Undone"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="@string/post_office"/>
    </LinearLayout>

</LinearLayout>